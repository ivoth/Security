<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="auto_update"
        android:summaryOff="自动更新已关闭"
        android:summaryOn="自动更新已打开"
        android:title="自动更新" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="dhgsd"
        android:summaryOff="电话归属地显示已关闭"
        android:summaryOn="电话归属地显示已打开"
        android:title="电话归属地显示设置" />

    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values"
        android:key="style"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:summary="透明"
        android:title="@string/pref_title_add_friends_to_messages" />

    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values"
        android:key="example_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:summary="设置归属地提示框位置"
        android:title="归属地提示框显示风格" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="hmd"
        android:summaryOff="黑名单拦截已关闭"
        android:summaryOn="黑名单拦截已打开"
        android:title="黑名单拦截设置" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="hmd"
        android:summaryOff="程序锁已关闭"
        android:summaryOn="程序锁已打开"
        android:title="程序锁设置" />
</PreferenceScreen>
